{
    "expo": {
        "name": "AS Operadora",
        "slug": "as-operadora",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "scheme": "asoperadora",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#1E40AF"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.asoperadora.app",
            "infoPlist": {
                "NSFaceIDUsageDescription": "Usamos Face ID para que puedas iniciar sesión de forma rápida y segura.",
                "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrarte hoteles y servicios cercanos.",
                "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrarte hoteles y servicios cercanos."
            },
            "config": {
                "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_API_KEY"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#1E40AF"
            },
            "package": "com.asoperadora.app",
            "permissions": [
                "NOTIFICATIONS",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT",
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION"
            ],
            "config": {
                "googleMaps": {
                    "apiKey": "YOUR_ANDROID_GOOGLE_MAPS_API_KEY"
                }
            }
        },
        "web": {
            "favicon": "./assets/favicon.png",
            "bundler": "metro"
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            "expo-local-authentication",
            [
                "expo-notifications",
                {
                    "icon": "./assets/notification-icon.png",
                    "color": "#1E40AF"
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Permitir que $(PRODUCT_NAME) use tu ubicación para mostrarte servicios cercanos."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}